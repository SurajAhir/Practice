<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FindAllThreadsBySomeName">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Search"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/ic_arrow_back_ios_24"
        android:paddingLeft="8dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:background="@drawable/fragment_user_profile_button_bg"
        android:id="@+id/fragment_findAllThreadsBy_goBack_btn"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search results:"
        android:layout_margin="8dp"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:id="@+id/fragment_findAllThreadsBy_searchResults_tv"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/fragment_findAllThreadsBy_recyclerView"
        tools:listitem="@layout/show_details_custom_layout"/>
</LinearLayout>
</androidx.core.widget.NestedScrollView>
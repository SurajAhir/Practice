<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/fragment_My_profile_NestedScrollView"
    tools:context=".Fragments.MyProfile">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Members"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_arrow_back_ios_24"
                android:paddingLeft="8dp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:gravity="center|start"
                android:textColor="@color/black"
                android:background="@drawable/fragment_user_profile_button_bg"
                android:id="@+id/fragment_My_profile_goBack_btn"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="#67F5F2F2"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/fragment_My_profile_UserProfileImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/person"
                    android:layout_gravity="center"
                    app:civ_border_color="#AAAAAA"
                    app:civ_border_width="2dp"/>
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    android:textAllCaps="true"
                    android:background="@drawable/custom_circle_shape"
                    android:layout_gravity="center"
                    android:id="@+id/fragment_My_profile_UserProfileImage_tv"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UserName"
                    android:capitalize="sentences"
                    android:layout_marginTop="5dp"
                    android:id="@+id/fragment_My_profile_userName_tv"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:id="@+id/fragment_My_profile_member_tv"
                    android:textSize="14sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Joined: "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/02/2022"
                        android:textColor="@color/black"
                        android:id="@+id/fragment_My_profile_joinedDate_tv" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last seen: "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="12/02/2022"
                        android:id="@+id/fragment_My_profile_lastSeen_tv" />
                </LinearLayout>
<!--                <Button-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:text="Report"-->
<!--                    android:backgroundTint="@color/white"-->
<!--                    android:textAllCaps="false"-->
<!--                    android:id="@+id/fragment_My_profile_report_btn"/>-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C9C0C0"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Messages"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fragment_My_profile_messages_Tv"
                        android:textColor="@color/black"
                        android:text="35"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reaction score"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fragment_My_profile_reactionScore_Tv"
                        android:textColor="@color/black"
                        android:text="35"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Points"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fragment_My_profile_points_Tv"
                        android:textColor="@color/black"
                        android:text="35"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C9C0C0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:weightSum="10"
                android:layout_height="50dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/fragment_user_profile_button_bg"
                    android:layout_height="match_parent">
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_height="match_parent"
                        android:soundEffectsEnabled="true"
                        android:id="@+id/fragment_My_profile_spinner_btn"/>
                </LinearLayout>
<!--                <LinearLayout-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_weight="6"-->
<!--                    android:layout_marginLeft="5dp"-->
<!--                    android:background="@drawable/fragment_user_profile_button_bg"-->
<!--                    android:layout_height="match_parent">-->
<!--&lt;!&ndash;                    <TextView&ndash;&gt;-->
<!--&lt;!&ndash;                        android:layout_width="match_parent"&ndash;&gt;-->
<!--&lt;!&ndash;                        android:gravity="center"&ndash;&gt;-->
<!--&lt;!&ndash;                        android:layout_height="match_parent"&ndash;&gt;-->
<!--&lt;!&ndash;                        android:backgroundTint="@color/white"&ndash;&gt;-->
<!--&lt;!&ndash;                        android:maxLines="1"&ndash;&gt;-->
<!--&lt;!&ndash;                        android:text="Start conversation"&ndash;&gt;-->
<!--&lt;!&ndash;                        android:textColor="@color/black"&ndash;&gt;-->
<!--&lt;!&ndash;                        android:id="@+id/fragment_My_profile_startConversation_btn"/>&ndash;&gt;-->
<!--                </LinearLayout>-->

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/ic_edit_post"
                android:text="Update your status..."
                android:gravity="center|start"
                android:drawablePadding="10dp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/fragment_user_profile_button_bg"
                android:id="@+id/fragment_My_profile_writeSomething_btn"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C7BCBC"
                android:visibility="gone"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
        android:visibility="gone"
                android:layout_marginBottom="15dp"
                android:id="@+id/fragment_My_profile_writeSomething_LayoutToShow"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/update_status_bg"
                    android:padding="3dp"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:padding="4dp"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/fragment_My_profile_undo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/undo"
                                android:layout_margin="6dp"
                                android:contentDescription="@null"
                                />

                            <ImageButton
                                android:id="@+id/fragment_My_profile_redo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:background="@drawable/redo"
                                android:contentDescription="@null"
                                />

                            <ImageButton
                                android:id="@+id/fragment_My_profile_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:background="@drawable/ic_b"
                                android:contentDescription="@null" />

                            <ImageButton
                                android:id="@+id/fragment_My_profile_italic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:background="@drawable/ic_i"
                                android:contentDescription="@null" />

                            <ImageButton
                                android:id="@+id/fragment_My_profile_underline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:background="@drawable/underline"
                                android:contentDescription="@null" />

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/font_size"
                                android:layout_margin="6dp"
                                android:id="@+id/fragment_My_profile_font_size_btn"/>
<!--                            <ImageButton-->
<!--                                android:id="@+id/fragment_My_profile_indent"-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:layout_margin="6dp"-->
<!--                                android:background="@drawable/indent"-->
<!--                                android:contentDescription="@null"-->
<!--                                />-->

<!--                            <ImageButton-->
<!--                                android:id="@+id/fragment_My_profile_outdent"-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:layout_margin="6dp"-->
<!--                                android:background="@drawable/outdent"-->
<!--                                android:contentDescription="@null" />-->

                            <ImageButton
                                android:id="@+id/fragment_My_profile_align_left"
                                android:layout_width="wrap_content"
                                android:layout_margin="6dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/justify_left"
                                android:contentDescription="@null"
                                />

                            <ImageButton
                                android:id="@+id/fragment_My_profile_align_center"
                                android:layout_width="wrap_content"
                                android:layout_margin="6dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/justify_center"
                                android:contentDescription="@null" />

                            <ImageButton
                                android:id="@+id/fragment_My_profile_align_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:background="@drawable/justify_right"
                                android:contentDescription="@null" />

                            <ImageButton
                                android:id="@+id/fragment_My_profile_insert_bullets"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bullets"
                                android:layout_margin="6dp"
                                android:contentDescription="@null" />

                            <ImageButton
                                android:id="@+id/fragment_My_profile_insert_numbers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/numbers"
                                android:layout_margin="6dp"
                                android:contentDescription="@null" />


<!--                            <ImageButton-->
<!--                                android:id="@+id/fragment_My_profile_insert_image"-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_margin="6dp"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:background="@drawable/ic_add_image"-->
<!--                                android:contentDescription="@null" />-->

                            <ImageButton
                                android:id="@+id/fragment_My_profile_insert_link"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:background="@drawable/insert_link"
                                android:contentDescription="@null" />

                        </LinearLayout>
                    </HorizontalScrollView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#B2ABAB"
                        android:layout_marginTop="2dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:id="@+id/fragment_My_profile_insert_link_Layout"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/update_status_bg"
                            android:hint="URL"
                            android:padding="3dp"
                            android:id="@+id/fragment_My_profile_Url_et"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/update_status_bg"
                            android:hint="Text"
                            android:layout_marginTop="3dp"
                            android:padding="3dp"
                            android:id="@+id/fragment_My_profile_Text_et"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/black"
                            android:textColor="@color/white"
                            android:text="Insert"
                            android:layout_gravity="right"
                            android:padding="3dp"
                            android:id="@+id/fragment_My_profile_insert_link_btn"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="3dp"/>
                    </LinearLayout>
                    <jp.wasabeef.richeditor.RichEditor
                        android:id="@+id/fragment_My_profile_RichEditor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:minHeight="200dp"
                        android:layout_marginTop="3dp"
                        />
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp"
                    android:hint="Write your status..."
                    android:gravity="top"
                    android:padding="4dp"
                    android:textSize="15sp"
                    android:background="@drawable/update_status_bg"
                    android:id="@+id/fragment_My_profile_write_message"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:visibility="gone"
                    android:id="@+id/fragment_My_profile_showAttachmentsRecyclerView"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:weightSum="6">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:elevation="8dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginLeft="15dp"
                        android:drawableLeft="@drawable/ic_post"
                        android:background="@color/black"
                        android:textColor="@color/white"
                        android:drawableTint="@color/white"
                        android:paddingLeft="18dp"
                        android:text="Post"
                        android:gravity="center|start"
                        android:drawablePadding="4dp"
                        android:id="@+id/fragment_My_profile_post_comment_btn"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ic_attach_file"
                        android:paddingLeft="8dp"
                        android:elevation="8dp"
                        android:text="Attach files"
                        android:layout_marginRight="15dp"
                        android:gravity="center|start"
                        android:background="@drawable/update_status_bg"
                        android:drawablePadding="4dp"
                        android:id="@+id/fragment_My_profile_attach_file_btn"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/fragment_user_profile_button_bg"
                android:text="There are no messages on "
                android:textColor="@color/black"
                android:gravity="center|start"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginTop="10dp"
                android:id="@+id/fragment_My_profile_NoMessage_tv"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:listitem="@layout/fragment_my_profile_custom_layout"
                android:id="@+id/fragment_My_profile_recyclerView"
                android:layout_marginTop="10dp"/>
            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_My_profile_progressBar"/>
        </LinearLayout>

</androidx.core.widget.NestedScrollView>
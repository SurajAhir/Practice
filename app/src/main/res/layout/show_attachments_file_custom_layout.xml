<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/post_comments_attachmentFileShowCounting_customLayout_tv"
    android:layout_alignParentLeft="true"
    android:text="1."
    android:gravity="center" />

    <TextView
        android:id="@+id/post_comments_attachmentFileShow_customLayout_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@id/post_comments_attachmentFileRemove_customLayout_btn"
        android:layout_toRightOf="@id/post_comments_attachmentFileShowCounting_customLayout_tv"
        android:maxLines="1"
        android:paddingRight="15dp"
        android:text="https/image.jpg"
        android:textColor="@color/black" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_close_24"
        android:layout_alignParentRight="true"
        android:text="Close"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/post_comments_attachmentFileRemove_customLayout_btn"
        android:drawableTint="@color/purple_700"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C9C9C1C1"
       android:layout_below="@id/post_comments_attachmentFileShow_customLayout_tv"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"/>
</RelativeLayout>
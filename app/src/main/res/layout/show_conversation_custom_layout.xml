<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/show_conversations_custom_layout_UserProfileImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/person"
            app:civ_border_color="#AAAAAA"
            app:civ_border_width="2dp"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textAllCaps="true"
            android:background="@drawable/custom_circle_shape"
            android:id="@+id/show_conversations_custom_layout_UserProfileImage_tv"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="8dp"
                android:weightSum="8"
                android:paddingLeft="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="7.7"
                    android:layout_height="wrap_content"
                    android:id="@+id/show_conversations_custom_layout_title_tv"
                    android:textColor="@color/black"
                    android:text="title " />
                <TextView
                    android:layout_width="10dp"
                    android:background="@drawable/custom_circle_shape"
                    android:backgroundTint="#313641"
                    android:visibility="gone"
                    android:id="@+id/show_conversations_custom_layout_isRead"
                    android:layout_height="10dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/show_conversations_custom_layout_recipientName_tv"
                android:paddingRight="8dp"
                android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/show_conversations_custom_layout_postDate_tv"
                android:paddingRight="8dp"
                android:text="22/02/2022"
                android:paddingLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F1EAEA"/>
</LinearLayout>
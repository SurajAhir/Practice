<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:background="@color/white"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:padding="8dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_circle_like"
            android:id="@+id/reaction_dialog_like_btn"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_love_icon"
            android:id="@+id/reaction_dialog_love_btn"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/ic_haha_icon"
            android:id="@+id/reaction_dialog_haha_btn"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_wow_icon"
            android:layout_weight="1"
            android:id="@+id/reaction_dialog_wow_btn"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_sad_icon"
            android:layout_weight="1"
            android:id="@+id/reaction_dialog_sad_btn"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_angry_icon"
            android:id="@+id/reaction_dialog_angry_btn"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/show_posts_of_threads_recyclerViewForShowAttachFiles"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/ic_attach_file"
                    android:paddingLeft="8dp"
                    android:elevation="8dp"
                    android:text="Attach files"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center|start"
                    android:background="@drawable/update_status_bg"
                    android:drawablePadding="4dp"
                    android:id="@+id/show_posts_of_threads_attach_file_btn"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="50dp"
                    android:elevation="8dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/ic_post"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:drawableTint="@color/white"
                    android:paddingLeft="18dp"
                    android:text="Post reply"
                    android:gravity="center|start"
                    android:drawablePadding="4dp"
                    android:id="@+id/show_posts_of_threads_post_Reply_btn"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
       android:visibility="gone"
                android:id="@+id/show_post_post_thread_ShowPreAndNextLayout"
                android:padding="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prev"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/update_status_bg"
                    android:drawableLeft="@drawable/ic_arrow_left_24"
                    android:drawableTint="@color/black"
                    android:textColor="@color/black"
                    android:padding="4dp"
                 android:visibility="gone"
                    android:gravity="center"
                    android:id="@+id/show_posts_of_threads_prevBtn"/>
                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="1"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/show_post_post_thread_ShowNumberBtn1"/>
                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="2"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/show_post_post_thread_ShowNumberBtn2"/>

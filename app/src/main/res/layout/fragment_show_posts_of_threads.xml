        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_arrow_back_ios_24"
            android:paddingLeft="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center|start"
            android:textColor="@color/black"
            android:background="@drawable/update_status_bg"
            android:id="@+id/show_posts_of_threads_category"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:gravity="center|start"
            android:textColor="@color/black"
            android:id="@+id/show_posts_of_threads_title"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:drawableLeft="@drawable/person"
                android:drawableTint="#BDB7B7"
                android:id="@+id/show_posts_of_threads_userName_tv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:drawableLeft="@drawable/ic_watch_later_24"
                android:layout_marginLeft="10dp"
                android:drawableTint="#BDB7B7"
                android:id="@+id/show_posts_of_threads_post_date_tv"/>
        </LinearLayout>

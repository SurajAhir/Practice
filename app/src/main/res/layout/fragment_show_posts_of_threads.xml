                    </HorizontalScrollView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#B2ABAB"
                        android:layout_marginTop="2dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:id="@+id/show_posts_of_threads_insert_link_Layout"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/update_status_bg"
                            android:hint="URL"
                            android:padding="3dp"
                            android:id="@+id/show_posts_of_threads_Url_et"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/update_status_bg"
                            android:hint="Text"
                            android:layout_marginTop="3dp"
                            android:padding="3dp"
                            android:id="@+id/show_posts_of_threads_Text_et"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/black"
                            android:textColor="@color/white"
                            android:text="Insert"
                            android:layout_gravity="right"
                            android:padding="3dp"
                            android:id="@+id/show_posts_of_threads_insert_link_btn"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="3dp"/>
                    </LinearLayout>
                    <jp.wasabeef.richeditor.RichEditor
                        android:id="@+id/show_posts_of_threads_RichEditor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="150dp"
                        android:visibility="gone"
                        android:layout_marginTop="3dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/update_status_bg"
                android:minHeight="100dp"
                android:textSize="15sp"
                android:hint="Write here..."
                android:gravity="start"
                android:paddingRight="10dp"
                android:id="@+id/show_posts_of_threads_message_et"
                android:textColor="@color/black"/>
            <!--            <TextView-->

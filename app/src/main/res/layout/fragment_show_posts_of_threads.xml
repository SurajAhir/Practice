                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="4"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/show_post_post_thread_ShowNumberBtn4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:textColor="@color/black"
                    android:padding="4dp"
                    android:background="@drawable/update_status_bg"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    android:id="@+id/show_post_post_thread_nextBtn"
                    android:drawableRight="@drawable/ic_arrow_right_24"/>

            </LinearLayout>
           <androidx.recyclerview.widget.RecyclerView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginTop="6dp"
               android:id="@+id/show_posts_of_threads_recyclerView"
               tools:listitem="@layout/show_posts_of_threads_custom_layout"
               />
        <ProgressBar
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:id="@+id/show_posts_of_threads_progressBar"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:id="@+id/show_posts_of_threads_bottem_ShowPreAndNextLayout"
                android:padding="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

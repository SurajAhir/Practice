                                android:contentDescription="@null" />

                            <ImageButton
                                android:id="@+id/show_posts_of_threads_italic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:background="@drawable/ic_i"
                                android:contentDescription="@null" />

                            <ImageButton
                                android:id="@+id/show_posts_of_threads_underline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:background="@drawable/underline"
                                android:contentDescription="@null" />

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/font_size"
                                android:layout_margin="6dp"
                                android:id="@+id/show_posts_of_threads_font_size_btn"/>

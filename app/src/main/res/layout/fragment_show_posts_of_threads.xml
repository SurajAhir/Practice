                            <ImageButton
                                android:id="@+id/show_posts_of_threads_align_left"
                                android:layout_width="wrap_content"
                                android:layout_margin="6dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/justify_left"
                                android:contentDescription="@null"
                                />

                            <ImageButton
                                android:id="@+id/show_posts_of_threads_align_center"
                                android:layout_width="wrap_content"
                                android:layout_margin="6dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/justify_center"
                                android:contentDescription="@null" />

                            <ImageButton
                                android:id="@+id/show_posts_of_threads_align_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:background="@drawable/justify_right"
                                android:contentDescription="@null" />

                            <ImageButton
                                android:id="@+id/show_posts_of_threads_insert_bullets"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bullets"
                                android:layout_margin="6dp"
                                android:contentDescription="@null" />

                            <ImageButton
                                android:id="@+id/show_posts_of_threads_insert_numbers"
                                android:layout_width="wrap_content"
